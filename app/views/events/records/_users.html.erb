<table class='table'>
  <thead>
    <tr>
      <th>順位</th>
      <th>プレイヤー</th>
      <th>ポイント</th>
    </tr>
  </thead>
  <tbody>
    <%- records.each do |record| %>
      <tr>
        <td>
          <%= number_with_delimiter record.rank %>&nbsp;位
          <%- if record.idol_id %>
            <span style="color: <%= Idol.find(record.idol_id).color %>">■</span>
            <%= link_to Idol.find(record.idol_id).name.gsub(' ', ''), event_records_path(record.event_id, idol_id: record.idol_id) %>
          <%- end %>
        </td>
        <td>
          <%= link_to (record.name || "【不明なプロデューサー(#{record.player_id})】"), records_path(player_id: record.player_id) %>
          <%= link_to "http://imas.gree-apps.net/app/index.php/mypage/user_profile/id/#{record.player_id}", target: '_blank' do %>
            <span class='glyphicon glyphicon-new-window'></span>
          <%- end %>
        </td>
        <td><%= number_with_delimiter record.point %></td>
      </tr>
    <%- end %>
  </tbody>
</table>
