- provide(:title, t('.bmd_runners'))
ol.breadcrumb
  li = link_to t('controllers.root'), root_path
  li.active = t('.bmd_runners')
.panel.panel-default
  .panel-heading
    h3.panel-title = t('.bmd_runners')
  ul.list-group
    li.list-group-item
      = t('.status_on', time: @updated_at.strf_mlevent)
      | &nbsp;
      = t('.download_link_html', csv_url: bmd_runner_path(format: :csv), sjis_url: bmd_runner_path(format: :csv, encoding: 'sjis'))
  .panel-body
    #chart
