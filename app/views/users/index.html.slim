- provide(:title, t('views.index.title_x', x: t('event')))
ol.breadcrumb
  li = link_to t('controllers.root'), root_path
  li.active = t('controllers.users')
table.table.table-striped.table-bordered
  thead
    tr
      th #
      th UID
      th Name
      th Alarms
      th Role
      th Created at
  tbody
    - @users.each do |user|
      tr
        td = user.id
        td = user.uid
        td
          = "#{user.name}("
          = link_to "@#{user.screen_name}", "https://twitter.com/#{user.screen_name}", target: '_blank'
          | )
        td = link_to user.alarms.length, user_alarms_path(user)
        td = user.role
        td = user.created_at
