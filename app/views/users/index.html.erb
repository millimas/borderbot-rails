<ol class="breadcrumb">
  <li><%= link_to 'Home', root_path %></li>
  <li class="active">Users</li>
</ol>

<table class='table table-striped table-bordered'>
  <thead>
    <tr>
      <th>#</th>
      <th>UID</th>
      <th>Name</th>
      <th>Role</th>
      <th>Created at</th>
    </tr>
  </thead>
  <tbody>
    <%- @users.each do |user| %>
      <tr>
        <td>
          <%= user.id %>
        </td>
        <td>
          <%= user.uid %>
        </td>
        <td>
          <%= user.name %>(<%= link_to "@#{user.screen_name}", "https://twitter.com/#{user.screen_name}", target: '_blank' %>)
        </td>
        <td>
          <%= user.role %>
        </td>
        <td>
          <%= user.created_at %>
        </td>
      </tr>
    <%- end %>
  </tbody>
</table>
